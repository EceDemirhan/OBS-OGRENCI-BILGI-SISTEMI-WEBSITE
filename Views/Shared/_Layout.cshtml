<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Static Navigation - SB Admin</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .navbar-dark.bg-dark {
            background-color: #010128 !important;
        }

        .sb-sidenav-dark {
            background-color: #010128 !important;
        }


        .logout-button {
            text-decoration: none !important;
            background-color: red !important;
            color: white !important;
            padding: 10px 20px;
            border: none;
            display: block;
            width: 100%;
            text-align: center;
        }

            .logout-button:hover {
                background-color: darkred !important;
            }

        .logout-form {
            margin: 0; /* formun üst ve alt boşluklarını kaldır */
    </style>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/">
           
            <img src="~/lib/indir.png" alt="Öğrenci Bilgi Otomasyonu" style="height: 40px; font-size: 15px; border-radius: 50%;">
            <span style="font-size: 15px; color: white;">Öğrenci Bilgi Sistemi</span>
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

        <!-- Navbar-->
        <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item">
                        <button type="submit" class="btn btn-link" style="padding: 0; border: none; background: none;">Çıkış Yap</button>
                    </form>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="/Ogretmen/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Öğretim Üyeleri
                        </a>
                        <a class="nav-link" href="/Ogrenci/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Öğrenci Bilgisi
                        </a>
                        <a class="nav-link" href="/Derslers/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Ders Bilgisi
                        </a>
                        <a class="nav-link" href="/Notlars/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                           Notlar
                        </a>
                        <a class="nav-link" href="/SınavTakvimi/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Sınav Takvimi
                        </a>
                        <a class="nav-link" href="/DersProgramis/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Ders Programı
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    © Özge Ece Demirhan,2024
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <p class="mb-0">
                                @RenderBody()
                            </p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>